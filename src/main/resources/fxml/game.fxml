                  <Insets left="10.0" right="10.0" />
               </VBox.margin></TableView>
            <HBox alignment="CENTER_LEFT" prefHeight="180.0" prefWidth="800.0" spacing="15.0">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="183.0" prefWidth="150.0">
                     <children>
                        <Button fx:id="goal_btn" alignment="TOP_CENTER" mnemonicParsing="false" text="Goal">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin></Button>
                        <ChoiceBox fx:id="goal_choice_box" prefWidth="150.0">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </ChoiceBox>
                        <TextField fx:id="goal_player_name" text="Player" />
