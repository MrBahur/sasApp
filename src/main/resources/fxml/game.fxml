   <children>
      <VBox alignment="TOP_CENTER" layoutY="-3.0" prefHeight="700.0" prefWidth="1000.0">
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" style="-fx-padding: 20;">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <TextField alignment="TOP_CENTER" editable="false" text="Guest">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin></TextField>
                        <Separator minWidth="-Infinity" prefHeight="0.0" prefWidth="200.0" />
