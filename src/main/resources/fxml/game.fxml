                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </TextField>
                        <TextArea fx:id="offence_description" prefHeight="200.0" prefWidth="200.0" text="description:" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="TOP_CENTER" layoutX="210.0" layoutY="10.0" prefHeight="183.0" prefWidth="150.0">
                     <children>
                        <Button fx:id="offside_btn" alignment="TOP_CENTER" mnemonicParsing="false" text="Offside">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin></Button>
                        <ChoiceBox fx:id="offside_choice_box" prefWidth="150.0">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin></ChoiceBox>
                        <TextField fx:id="offside_player_name" text="Player" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="TOP_CENTER" layoutX="310.0" layoutY="10.0" prefHeight="187.0" prefWidth="146.0">
                     <children>
                        <Button fx:id="sub_btn" alignment="TOP_CENTER" mnemonicParsing="false" text="Player Substitution">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin></Button>
                        <TextField fx:id="sub_player_in" text="Player In">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="sub_player_out" layoutX="10.0" layoutY="40.0" text="Player Out" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="TOP_CENTER" layoutX="310.0" layoutY="10.0" prefHeight="183.0" prefWidth="150.0">
                     <children>
                        <Button fx:id="card_btn" alignment="TOP_CENTER" mnemonicParsing="false" text="Card">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin></Button>
                        <ChoiceBox fx:id="card_choice_box" prefWidth="150.0">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </ChoiceBox>
                        <TextField fx:id="card_referee" text="Referee Pulled">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="card_player" layoutX="10.0" layoutY="65.0" text="Player" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="5.0" top="5.0" />
                     </padding>
