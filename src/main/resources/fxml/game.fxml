                              <Insets top="20.0" />
                           </VBox.margin>
                        </TextArea>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="TOP_CENTER" layoutX="110.0" layoutY="10.0" prefHeight="183.0" prefWidth="180.0">
                     <children>
                        <Button fx:id="offence_btn" alignment="TOP_CENTER" mnemonicParsing="false" text="Offence">
